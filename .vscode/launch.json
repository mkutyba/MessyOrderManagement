{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Web API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/MessyOrderManagement/bin/Debug/net10.0/MessyOrderManagement.dll",
      "args": [],
      "cwd": "${workspaceFolder}/MessyOrderManagement",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": ".NET Core Test (All)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/MessyOrderManagement.Tests/MessyOrderManagement.Tests.csproj",
        "--logger",
        "console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": ".NET Core Test (Current File)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/MessyOrderManagement.Tests/MessyOrderManagement.Tests.csproj",
        "--filter",
        "FullyQualifiedName~${fileBasenameNoExtension}",
        "--logger",
        "console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ]
}
